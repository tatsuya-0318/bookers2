<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2>Editing Book</h2>
      <%= render "layouts/error", obj:@book %>
      <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title", class: "control-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion, "Opinion", class: "control-label" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <div class="form-group">
        <%= link_to "Show", book_path %> |
        <%= link_to "Back", books_path %> 
      </div>
    </div>
  </div>
</div>